@model IEnumerable<Entities.Todo>
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">Tarefa a Fazer</div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tarefa</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Tarefa</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Cadastrar Tarefa", "Cadastrar", "Home", null, new { @class="btn btn-success btn-sm"})
    </div>
</div>
